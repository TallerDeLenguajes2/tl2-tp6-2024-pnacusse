@model IEnumerable<tl2_tp6_2024_pnacusse.Models.Productos>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Productos</h1>

<table class="table table-striped table-dark table-bordered align-middle">
    <caption>Lista de productos</caption>
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Descripción</th>
            <th scope="col">Precio</th>
            <th scope="col">Modificar</th>
            <th scope="col">Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.IdProducto</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td><a asp-controller="Producto" asp-action="EditProducto" asp-route-idProducto="@producto.IdProducto" class="btn btn-info">Modificar</a></td>
                <td><a asp-controller="Producto" asp-action="DeleteProducto" asp-route-idProducto="@producto.IdProducto" class="btn btn-danger">Borrar</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Producto" asp-action="CreateProducto" class="btn btn-dark btn-lg">Alta de producto</a>