@model tl2_tp6_2024_pnacusse.Models.Productos

@{
    ViewData["Title"] = "Alta de Producto";
}

<h1>Alta de Producto</h1>

<form asp-controller="Producto" asp-action="CreateProducto" method="post">
    <div class="form-group mb-3">
        <label asp-for="Descripcion">Descripción</label>
        <input asp-for="Descripcion" class="form-control" id="descripcion">
    </div>
    <div class="form-group mb-3">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control">
    </div>
    <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Crear</button>
    </div>
</form>